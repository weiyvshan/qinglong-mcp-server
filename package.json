    "axios": "^1.7.9",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^25.2.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^3.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/weiyvshan/qinglong-mcp-server.git"
  },
  "homepage": "https://github.com/weiyvshan/qinglong-mcp-server#readme",
