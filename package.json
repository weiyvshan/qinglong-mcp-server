{
  "name": "qinglong-mcp-server",
  "version": "1.0.14",
  "description": "青龙面板 MCP 服务器 - 基于 Model Context Protocol 的青龙面板管理工具",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "qinglong-mcp-server": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "lint": "tsc --noEmit",
